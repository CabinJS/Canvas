//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="#{post.url}")
      h1.post-title= post.title
    span.post-date!= 'Published ' + post.date.toLocaleDateString().split(',').slice(1).join(',')

mixin post(post)
  mixin postHead(post)
  .post-body!= post.content

doctype 5
html
  head
    meta(charset="utf8")
    base(href="#{data.baseUrl}")
    meta(name="viewport", content="width=device-width")
    link(rel="icon", type="image/png", href="images/cabin.png")
    link(href="styles/main.css", rel="stylesheet")
    block head
      title= "My Blog"
  body
    .center
      nav.group
        h1.name
          a(href="") My Name
        ul.nav-links
          li.text-link
            a(href="about.html") about
          li.text-link
            a(href="archives.html") archives
      block content

    a(href="http://cabinjs.com")
      img.cabin(src="images/cabin.png")

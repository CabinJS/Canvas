//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="#{data.baseUrl}#{post.url}")
      h1.post-title= post.title
      h2.post-date!= 'Published ' + post.date.toLocaleDateString().split(',').slice(1).join(',')

mixin post(post)
    mixin postHead(post)
    .post-body!= post.content

doctype 5
html
  head
    meta(charset="utf8")
    meta(name="viewport", content="width=device-width")
    link(rel="icon", type="image/png", href="#{data.baseUrl}images/cabin.png")
    link(href="#{data.baseUrl}styles/main.css", rel="stylesheet")
    block head
      title= "My Blog"
  body
    .center
      nav.group
        h1.name
          a(href="#{data.baseUrl}") Colin Wren
        ul.nav-links
          li.text-link
            a(href="#{data.baseUrl}about.html") about
          li.text-link
            a(href="#{data.baseUrl}archives.html") archives
      block content

    a(href="http://cabinjs.com")
      img.cabin(src="#{data.baseUrl}images/cabin.png")
